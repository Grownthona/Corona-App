<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forgot_Password2">

    <TextView
        android:id="@+id/textViewy"
        android:layout_width="348dp"
        android:layout_height="89dp"
        android:layout_marginTop="136dp"
        android:fontFamily="@font/donegal_one"
        android:gravity="center"
        android:paddingTop="20sp"
        android:text="Forget Password"
        android:textColor="#000000"
        android:textSize="35sp"
        android:transitionName="logo_txtt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/emailrp"
        android:layout_width="302dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/blackborder"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColorHint="#2C2B2B"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/next1"
        android:layout_width="304dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="normal"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailrp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="284dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="We need to register your email before getting started."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewy" />

</androidx.constraintlayout.widget.ConstraintLayout>